<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="smallTextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/font_color</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <style name="vSmallTextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="MeduimTextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/font_color</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>




    <style name="semiLargeTextView" parent="BaseCurrenciestyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textColorHint">@color/font_color</item>

    </style>
    
    <style name="BaseCurrenciestyle">
        <item name="android:gravity">start</item>
    </style>


</resources>