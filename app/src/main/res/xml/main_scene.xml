<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/collapsed"
        app:constraintSetStart="@id/expanded">

        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/recyclerview"
            app:touchAnchorSide="top" />

    </Transition>

    <ConstraintSet android:id="@+id/expanded">
        <Constraint
            android:id="@id/toolbar_background"
            android:layout_height="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                app:attributeName="imageAlpha"
                app:customIntegerValue="255" />
        </Constraint>
        <Constraint
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="40sp"
            android:scaleX="1.0"
            android:scaleY="1.0"
            app:layout_constraintTop_toTopOf="@id/currency_bar_icon"
            app:layout_constraintBottom_toBottomOf="@id/currency_bar_icon"
            app:layout_constraintStart_toEndOf="@id/currency_bar_icon">


            <CustomAttribute
                app:attributeName="textColor"
                app:customColorValue="@color/black" />
        </Constraint>

        <Constraint
            android:id="@id/currency_container"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"  >
        </Constraint>


        <Constraint
            android:id="@id/currency_bar_icon"
            android:layout_width="@dimen/iv_60"
            android:layout_height="@dimen/iv_60"
            android:adjustViewBounds="true"

            android:layout_marginStart="@dimen/margin_16"
            android:src="@drawable/ic_united_europe"
            android:contentDescription="@null"
            android:fitsSystemWindows="true"
            android:scaleType="center"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintBottom_toBottomOf="@id/currency_container"
            app:layout_constraintStart_toStartOf="@id/currency_container"
            app:layout_constraintTop_toTopOf="@id/currency_container">

            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="0" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapsed">
        <Constraint
            android:id="@id/toolbar_background"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                app:attributeName="imageAlpha"
                app:customIntegerValue="0" />
        </Constraint>

        <Constraint
            android:id="@id/currency_container"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/icon_40"
            android:background="@color/white"
            android:visibility="gone"
            app:visibilityMode="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >
            <CustomAttribute
                app:attributeName="imageAlpha"
                app:customIntegerValue="0" />
        </Constraint>
        <Constraint
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginBottom="0dp"
            android:scaleX="0.625"
            android:scaleY="0.625"
            app:layout_constraintStart_toEndOf="@id/currency_bar_icon"
            app:layout_constraintBottom_toBottomOf="@id/currency_bar_icon"
            app:layout_constraintTop_toTopOf="@id/currency_bar_icon">

            <CustomAttribute
                app:attributeName="textColor"
                app:customColorValue="@color/white" />
        </Constraint>


        <Constraint
            android:id="@id/currency_bar_icon"
            android:layout_width="@dimen/icon_40"
            android:layout_height="@dimen/icon_40"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_16"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_constraintBottom_toBottomOf="@id/toolbar_background"
            android:src="@drawable/ic_united_europe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="1" />
        </Constraint>
    </ConstraintSet>

</MotionScene>